{
  "extends": "./tsconfig.json", // Extend from your main tsconfig
  "compilerOptions": {
    "module": "CommonJS", // Set module system to CommonJS
    "moduleResolution": "node", // Use Node.js module resolution
    "target": "ES2018", // Make sure the target is compatible with your Node.js version
    "outDir": "./dist", // Specify the output directory
    "noEmit": false, // Enable file emission
    "isolatedModules": false // Disable isolated modules if not necessary
  },
  "include": [
    "./codegen-plugin.ts" // Adjust the path as necessary
  ]
}
